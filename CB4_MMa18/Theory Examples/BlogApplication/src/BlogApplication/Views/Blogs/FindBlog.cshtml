@model BlogApplication.Data.Blog
@{
    ViewBag.Title = "FindBlog";
}

<h2>FindBlog</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Title</th>
            <th scope="col">Url</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @if (Model == null)
            {
                <td colspan="3">No blog found.</td>
            }
            else
            {
                <td>@Model.Id</td>
                <td>@Model.Title</td>
                <td><a href="@Model.Url">@Model.Url</a></td>
            }
        </tr>
    </tbody>
</table>

